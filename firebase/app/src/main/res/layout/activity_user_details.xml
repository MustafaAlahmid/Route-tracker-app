<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user_details">

    <TextView
            android:text="User page"
            android:layout_width="153dp"
            android:layout_height="86dp"
            android:id="@+id/username" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"

            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="30sp"/>
    <Button
            android:text="My location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/llbtn" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:background="@drawable/btn_rounded"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/dbtn"
            app:layout_constraintVertical_bias="0.515" android:textStyle="bold" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Users  options "
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/dbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="216dp"
            android:background="@drawable/btn_rounded"
            android:textSize="12sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>