<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/rtabackground">

    <EditText
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:inputType="textPersonName"
            android:text="leti@gmail.com"
            android:ems="10"
            android:id="@+id/Email" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22sp" android:textColor="@android:color/white" android:textStyle="bold"
            android:autoText="true" android:textAllCaps="false" android:background="#3B3B3B"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Email"
            android:layout_marginTop="44dp"
            android:background="#3B3B3B" android:textColor="@android:color/white" android:textSize="22sp"
            android:autoText="false" android:text="123456"/>
    <Button
            android:text="Regestir"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/regester"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/signin"
            android:background="#3B3B3B" android:textColor="@android:color/white" android:textSize="22sp"/>
    <Button
            android:text="signin"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/signin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/password" android:background="#3B3B3B"
            android:textColor="@android:color/white" android:textSize="22sp"/>

</android.support.constraint.ConstraintLayout>