<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
            android:text="email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/textView1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="nmea"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:textSize="24sp" android:textStyle="bold"
    />
    <TextView
            android:text="Email"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:id="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toStartOf="@+id/textView1"
            app:layout_constraintBottom_toTopOf="@+id/textView6" android:textSize="24sp" android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Name"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="24sp" android:textStyle="bold"
    />
</android.support.constraint.ConstraintLayout>